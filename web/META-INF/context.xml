<?xml version="1.0" encoding="UTF-8"?>
<Context path="/bookStore">
  <!-- the book database that contains the Book Store data -->
  <Resource auth="Container" driverClassName="com.mysql.jdbc.Driver" 
            logAbandoned="true" maxActive="100" maxIdle="30" 
            maxWait="10000" name="jdbc/bookDB" password="sesame" 
            removeAbandoned="true" removeAbandonedTimeout="60" 
            type="javax.sql.DataSource" 
            url="jdbc:mysql://localhost:3306/book?autoReconnect=true" 
            username="root"/>
  <!-- the store database that contains admin usernames and passwords -->
  <Resource auth="Container" driverClassName="com.mysql.jdbc.Driver" 
            logAbandoned="true" maxActive="100" maxIdle="30" 
            maxWait="10000" name="jdbc/storeDB" password="sesame" 
            removeAbandoned="true" removeAbandonedTimeout="60" 
            type="javax.sql.DataSource" 
            url="jdbc:mysql://localhost:3306/store?autoReconnect=true" 
            username="root"/>
  <Realm className="org.apache.catalina.realm.DataSourceRealm" 
         dataSourceName="jdbc/storeDB" debug="99" 
         localDataSource="true" roleNameCol="Rolename" 
         userCredCol="Password" userNameCol="Username" 
         userRoleTable="UserRole" userTable="UserPass"/>
</Context>
